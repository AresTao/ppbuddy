<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>ppbuddy</display-name>	
	<context-param> 
  		<param-name>resteasy.scan</param-name> 
  		<param-value>true</param-value> 
  	</context-param>
  	<context-param>
  		<param-name>resteasy.resources</param-name>
  		<param-value>com.ctbri.service.PostService,com.ctbri.service.FileService,com.ctbri.service.ImgService</param-value>
  	</context-param>
 	<!-- <context-param>
		<param-name>resteasy.providers</param-name>
		<param-value>com.ctbri.interceptor.AuthInterceptor</param-value>
	</context-param> --> 
	<listener>
		<listener-class>
			org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>Resteasy</servlet-name>
		<servlet-class>
			org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Resteasy</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AccountService</servlet-name>
		<servlet-class>
			com.ctbri.service.AccountService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AccountService</servlet-name>
		<url-pattern>/admin/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>PostServlet</servlet-name>
		<servlet-class>
			com.ctbri.service.PostServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PostServlet</servlet-name>
		<url-pattern>/admin/post</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ImgServlet</servlet-name>
		<servlet-class>
			com.ctbri.service.ImgServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImgServlet</servlet-name>
		<url-pattern>/admin/img</url-pattern>
	</servlet-mapping>
	
	<filter>    
		<filter-name>AdminFilter</filter-name>   
		<filter-class>com.ctbri.filter.AdminFilter</filter-class>   
	</filter>
	<filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/index.jsp</url-pattern>
    </filter-mapping>
    
    <filter>    
		<filter-name>SetCharacterEncodingFilter</filter-name>   
		<filter-class>com.ctbri.filter.SetCharacterEncodingFilter</filter-class>   
	</filter>
	<filter-mapping>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
